@model Magfinalproject.Models.agent

@{
    ViewBag.PointName = "المعلومات / إنشاء";
    Layout = "~/Views/Shared/_Layoutmagcontrol.cshtml";
}


<style>
    .row, form {
        width: 100%;
    }
</style>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Home/magcontrol">لوحة التحكم</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.PointName</li>
</ol>

<div class="row">

    @using (Html.BeginForm("Create", "agents", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        <h2 style="padding-right:25px">إظافة</h2>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    


            <div class="form-group">
                @Html.LabelFor(model => model.PointName, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.PointName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PointName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.regon, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.regon, new { htmlAttributes = new { @class = "form-control", @id = "regon" } })
                    @Html.ValidationMessageFor(model => model.regon, "", new { @class = "text-danger" })
                </div>
            </div>




            <div class="form-group">
                <div class=" col-sm-10">
                    <input type="submit" value="إنشاء" class="btn btn-primary" id="save" />
                </div>
            </div>
    }
</div>
<hr />
<p>
    @Html.ActionLink("الرجوع إلى القائمة", "Index")
</p>
